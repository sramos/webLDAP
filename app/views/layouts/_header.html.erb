<% if user_signed_in? %>
  <header id="header" class="hidden-xs headtopfixed">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">
        <%= image_tag "webldap-logo.small.png", size: "30x30", alt: "WebLDAP logo", class: "d-inline-block align-top" %>
        WebLDAP
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <%= link_to t("devise.password_change-action"), change_password_path, title: t("devise.password_change"), class: "nav-link" %>
          </li>
        </ul>
        <div class="my-2 my-lg-0">
          <%= link_to icon('fa', 'sign-out-alt', current_user.name), destroy_user_session_path, title: t("devise.logout"), method: :delete, class: "nav-link" %>
        </li>
      </div>
    </nav>
  </header>
<% end %>
